<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp">

    <!-- Contenedor virtual para alinear elementos centrales -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/centerGuide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <!-- Imagen izquierda anclada verticalmente al bloque de texto+botones -->
    <ImageView
        android:id="@+id/imagePeleadorRojo"
        android:layout_width="100dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/no_profile_image"
        app:layout_constraintTop_toTopOf="@id/textViewNombreEvento"
        app:layout_constraintBottom_toBottomOf="@id/layoutBotones"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginEnd="8dp" />

    <!-- Imagen derecha anclada verticalmente igual -->
    <ImageView
        android:id="@+id/imagePeleadorAzul"
        android:layout_width="100dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/no_profile_image"
        app:layout_constraintTop_toTopOf="@id/textViewNombreEvento"
        app:layout_constraintBottom_toBottomOf="@id/layoutBotones"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp" />

    <!-- Nombre del evento -->
    <TextView
        android:id="@+id/textViewNombreEvento"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Nombre evento"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/blanco"
        android:gravity="center"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/imagePeleadorRojo"
        app:layout_constraintEnd_toStartOf="@id/imagePeleadorAzul" />

    <!-- Fecha -->
    <TextView
        android:id="@+id/textViewFecha"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Fecha"
        android:textColor="@color/grisClaro"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/textViewNombreEvento"
        app:layout_constraintStart_toStartOf="@id/textViewNombreEvento"
        app:layout_constraintEnd_toEndOf="@id/textViewNombreEvento" />

    <!-- Lugar -->
    <TextView
        android:id="@+id/textViewUbicacion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Lugar"
        android:textColor="@color/gris"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/textViewFecha"
        app:layout_constraintStart_toStartOf="@id/textViewNombreEvento"
        app:layout_constraintEnd_toEndOf="@id/textViewNombreEvento" />

    <!-- Botones centrados en fila -->
    <LinearLayout
        android:id="@+id/layoutBotones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/textViewUbicacion"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/textViewUbicacion"
        app:layout_constraintEnd_toEndOf="@id/textViewUbicacion">

        <ImageButton
            android:id="@+id/buttonFavorito"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_favorite"
            android:background="@color/negroClaro"
            android:contentDescription="Guardar evento"
            android:layout_marginEnd="8dp" />

        <ImageButton
            android:id="@+id/buttonLike"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_thumb_up"
            android:background="@color/negroClaro"
            android:contentDescription="Me gusta"
            android:layout_marginEnd="8dp" />

        <ImageButton
            android:id="@+id/buttonDislike"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_thumb_down"
            android:background="@color/negroClaro"
            android:contentDescription="No me gusta"
            android:layout_marginEnd="8dp" />

        <ImageButton
            android:id="@+id/buttonComentarios"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_comentario"
            android:background="@color/negroClaro"
            android:contentDescription="Comentarios" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>