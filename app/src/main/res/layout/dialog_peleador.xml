<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="@color/negroClaro">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="@color/negroClaro">

        <ImageButton
            android:id="@+id/buttonCerrar"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_close"
            android:background="@android:color/transparent"
            android:contentDescription="Cerrar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageView
            android:id="@+id/imagePeleador"
            android:layout_width="225dp"
            android:layout_height="300dp"
            android:scaleType="fitCenter"
            app:layout_constraintTop_toBottomOf="@id/buttonCerrar"
            app:layout_constraintBottom_toTopOf="@id/contenedorGraficos"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="12dp" />

        <TextView
            android:id="@+id/textViewNombre"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Nombre completo"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/blanco"
            app:layout_constraintTop_toTopOf="@id/imagePeleador"
            app:layout_constraintStart_toEndOf="@id/imagePeleador"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/textViewApodo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Apodo"
            android:textStyle="italic"
            android:textColor="@color/grisClaro"
            app:layout_constraintTop_toBottomOf="@id/textViewNombre"
            app:layout_constraintStart_toStartOf="@id/textViewNombre"
            app:layout_constraintEnd_toEndOf="@id/textViewNombre" />

        <TextView
            android:id="@+id/textViewRecord"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="0-0-0"
            android:textColor="@color/grisClaro"
            app:layout_constraintTop_toBottomOf="@id/textViewApodo"
            app:layout_constraintStart_toStartOf="@id/textViewNombre"
            app:layout_constraintEnd_toEndOf="@id/textViewNombre" />

        <TextView
            android:id="@+id/textViewNacionalidad"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/gris"
            app:layout_constraintTop_toBottomOf="@id/textViewRecord"
            app:layout_constraintStart_toStartOf="@id/textViewNombre"
            app:layout_constraintEnd_toEndOf="@id/textViewNombre" />

        <TextView
            android:id="@+id/textViewGuardia"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Guardia: Southpaw"
            android:textColor="@color/gris"
            app:layout_constraintTop_toBottomOf="@id/textViewNacionalidad"
            app:layout_constraintStart_toStartOf="@id/textViewNombre"
            app:layout_constraintEnd_toEndOf="@id/textViewNombre" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/contenedorGraficos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/imagePeleador"
            app:layout_constraintBottom_toTopOf="@id/textNumeroPeleas">

            <!-- Label STRIKES -->
            <TextView
                android:id="@+id/textLabelStrikes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Strikes"
                android:textColor="@color/blanco"
                android:textStyle="bold"
                android:textSize="18sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginBottom="8dp"/>

            <!-- PieChart Precisi贸n STRIKES -->
            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/pieChartStrikesPrecision"
                android:layout_width="0dp"
                android:layout_height="160dp"
                app:layout_constraintTop_toBottomOf="@id/textLabelStrikes"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/pieChartStrikesDefensa"
                app:layout_constraintWidth_percent="0.45"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/textLabelStrikesPrecision"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Precisi贸n"
                android:textColor="@color/grisClaro"
                app:layout_constraintTop_toBottomOf="@id/pieChartStrikesPrecision"
                app:layout_constraintStart_toStartOf="@id/pieChartStrikesPrecision"
                app:layout_constraintEnd_toEndOf="@id/pieChartStrikesPrecision"
                android:layout_marginTop="4dp"/>

            <!-- PieChart Defensa STRIKES -->
            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/pieChartStrikesDefensa"
                android:layout_width="0dp"
                android:layout_height="160dp"
                app:layout_constraintTop_toBottomOf="@id/textLabelStrikes"
                app:layout_constraintStart_toEndOf="@id/pieChartStrikesPrecision"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintWidth_percent="0.45"
                android:layout_marginStart="8dp"/>

            <TextView
                android:id="@+id/textLabelStrikesDefensa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Defensa"
                android:textColor="@color/grisClaro"
                app:layout_constraintTop_toBottomOf="@id/pieChartStrikesDefensa"
                app:layout_constraintStart_toStartOf="@id/pieChartStrikesDefensa"
                app:layout_constraintEnd_toEndOf="@id/pieChartStrikesDefensa"
                android:layout_marginTop="4dp"/>

            <!-- Label TAKEDOWNS -->
            <TextView
                android:id="@+id/textLabelTd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Derribos"
                android:textColor="@color/blanco"
                android:textStyle="bold"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@id/textLabelStrikesPrecision"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp"/>

            <!-- PieChart Precisi贸n TD -->
            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/pieChartTdPrecision"
                android:layout_width="0dp"
                android:layout_height="160dp"
                app:layout_constraintTop_toBottomOf="@id/textLabelTd"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/pieChartTdDefensa"
                app:layout_constraintWidth_percent="0.45"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/textLabelTdPrecision"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Precisi贸n"
                android:textColor="@color/grisClaro"
                app:layout_constraintTop_toBottomOf="@id/pieChartTdPrecision"
                app:layout_constraintStart_toStartOf="@id/pieChartTdPrecision"
                app:layout_constraintEnd_toEndOf="@id/pieChartTdPrecision"
                android:layout_marginTop="4dp"/>

            <!-- PieChart Defensa TD -->
            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/pieChartTdDefensa"
                android:layout_width="0dp"
                android:layout_height="160dp"
                app:layout_constraintTop_toBottomOf="@id/textLabelTd"
                app:layout_constraintStart_toEndOf="@id/pieChartTdPrecision"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintWidth_percent="0.45"
                android:layout_marginStart="8dp"/>

            <TextView
                android:id="@+id/textLabelTdDefensa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Defensa"
                android:textColor="@color/grisClaro"
                app:layout_constraintTop_toBottomOf="@id/pieChartTdDefensa"
                app:layout_constraintStart_toStartOf="@id/pieChartTdDefensa"
                app:layout_constraintEnd_toEndOf="@id/pieChartTdDefensa"
                android:layout_marginTop="4dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/textNumeroPeleas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/blanco"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/contenedorGraficos"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewPeleas"
            android:layout_width="0dp"
            android:layout_height="260dp"
            app:layout_constraintTop_toBottomOf="@id/textNumeroPeleas"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
</androidx.core.widget.NestedScrollView>
