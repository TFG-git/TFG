<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/negroClaro"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/layoutCargando"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@color/negroClaro"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

    <ProgressBar
        android:id="@+id/progressBarCargando"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Large"
        android:indeterminate="true" />

    <TextView
        android:id="@+id/textoCargando"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cargando datos, por favor espere..."
        android:textColor="@android:color/white"
        android:layout_marginTop="16dp"
        android:textSize="16sp"/>
</LinearLayout>

    <LinearLayout
        android:id="@+id/llContenedorFragments"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="13"
        android:orientation="vertical"/>

    <LinearLayout
        android:id="@+id/llContenedorBotones"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="@color/negroClaro">

        <ImageButton
            android:id="@+id/btnListas"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_favorite"
            android:background="@color/negroClaro"/>
        <ImageButton
            android:id="@+id/btnInicio"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_home"
            android:background="@color/negroClaro"/>
        <ImageButton
            android:id="@+id/btnPerfil"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_profile_outline"
            android:background="@color/negroClaro"/>

    </LinearLayout>

</LinearLayout>