<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:background="@color/negroClaro">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/centerGuide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <!-- Imagen izquierda -->
    <ImageView
        android:id="@+id/imagePeleadorRojo"
        android:layout_width="100dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/no_profile_image"
        app:layout_constraintTop_toTopOf="@id/textViewNombreRojo"
        app:layout_constraintBottom_toBottomOf="@id/layoutBotones"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginEnd="8dp" />

    <!-- Imagen derecha -->
    <ImageView
        android:id="@+id/imagePeleadorAzul"
        android:layout_width="100dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/no_profile_image"
        app:layout_constraintTop_toTopOf="@id/textViewNombreRojo"
        app:layout_constraintBottom_toBottomOf="@id/layoutBotones"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp" />

    <!-- Nombre Rojo -->
    <TextView
        android:id="@+id/textViewNombreRojo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Nombre Rojo"
        android:textColor="@color/blanco"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/imagePeleadorRojo"
        app:layout_constraintEnd_toStartOf="@id/imagePeleadorAzul" />

    <!-- VS -->
    <TextView
        android:id="@+id/textViewVs"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="vs"
        android:textColor="@color/grisClaro"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/textViewNombreRojo"
        app:layout_constraintStart_toStartOf="@id/textViewNombreRojo"
        app:layout_constraintEnd_toEndOf="@id/textViewNombreRojo" />

    <!-- Nombre Azul -->
    <TextView
        android:id="@+id/textViewNombreAzul"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Nombre Azul"
        android:textColor="@color/blanco"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/textViewVs"
        app:layout_constraintStart_toStartOf="@id/textViewVs"
        app:layout_constraintEnd_toEndOf="@id/textViewVs" />

    <!-- Categoría -->
    <TextView
        android:id="@+id/textViewCategoria"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Categoría"
        android:textColor="@color/grisClaro"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/textViewNombreAzul"
        app:layout_constraintStart_toStartOf="@id/textViewNombreAzul"
        app:layout_constraintEnd_toEndOf="@id/textViewNombreAzul" />

    <!-- Method -->
    <TextView
        android:id="@+id/textViewMetodo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Método de victoria"
        android:textColor="@color/gris"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/textViewCategoria"
        app:layout_constraintStart_toStartOf="@id/textViewCategoria"
        app:layout_constraintEnd_toEndOf="@id/textViewCategoria" />

    <!-- Botones -->
    <LinearLayout
        android:id="@+id/layoutBotones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/textViewMetodo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/textViewMetodo"
        app:layout_constraintEnd_toEndOf="@id/textViewMetodo">

        <ImageButton
            android:id="@+id/buttonFavorito"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_favorite"
            android:background="@color/negroClaro"
            android:contentDescription="Me gusta"
            android:layout_marginEnd="8dp" />

        <ImageButton
            android:id="@+id/buttonLike"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_thumb_up"
            android:background="@color/negroClaro"
            android:contentDescription="Me gusta"
            android:layout_marginEnd="8dp" />

        <ImageButton
            android:id="@+id/buttonDislike"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_thumb_down"
            android:background="@color/negroClaro"
            android:contentDescription="No me gusta"
            android:layout_marginEnd="8dp" />

        <ImageButton
            android:id="@+id/buttonComentarios"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_comentario"
            android:background="@color/negroClaro"
            android:contentDescription="Comentarios" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>