<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/negroClaro"
    android:padding="8dp">

    <EditText
        android:id="@+id/etBuscarPeleador"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Buscar peleador..."
        android:textColorHint="@color/grisClaro"
        android:textColor="@color/grisClaro"
        android:inputType="text"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/buttonBuscar"
        android:layout_marginEnd="8dp"/>

    <ImageButton
        android:id="@+id/buttonBuscar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="Buscar"
        android:src="@drawable/ic_lupa"
        android:backgroundTint="@color/negroClaro"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnOrdenarPeleadores"
        android:layout_marginEnd="8dp"/>

    <ImageButton
        android:id="@+id/btnOrdenarPeleadores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="Ordenar"
        android:src="@drawable/ic_ordenar"
        android:backgroundTint="@color/negroClaro"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerPeleadores"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/etBuscarPeleador"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>