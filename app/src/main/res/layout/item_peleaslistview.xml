<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/negroOscuro">

    <ImageView
        android:id="@+id/ivPeleador1"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:src="@drawable/no_profile_image"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="130dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:id="@+id/tvPeso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PESO"
            android:textColor="@color/gris"
            android:textStyle="bold"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvPeleador1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Peleador 1"
                android:textColor="@color/grisClaro"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:text="VS"
                android:textStyle="bold"
                android:textColor="@color/gris"/>
            <TextView
                android:id="@+id/tvPeleador2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="textEnd"
                android:text="Peleador 2"
                android:textColor="@color/grisClaro"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>


    <ImageView
        android:id="@+id/ivPeleador2"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:src="@drawable/no_profile_image"/>

</LinearLayout>