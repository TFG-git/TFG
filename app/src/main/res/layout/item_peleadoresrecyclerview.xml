<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="6dp"
    app:cardBackgroundColor="@color/negroClaro">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/imagePeleador"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:src="@drawable/no_profile_image"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/circular_bg" />

        <TextView
            android:id="@+id/textViewNombrePeleador"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Nombre del Peleador"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/blanco"
            app:layout_constraintStart_toEndOf="@id/imagePeleador"
            app:layout_constraintTop_toTopOf="@id/imagePeleador"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="16dp"/>

        <TextView
            android:id="@+id/textViewApodo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Apodo"
            android:textColor="@color/grisClaro"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@id/textViewNombrePeleador"
            app:layout_constraintTop_toBottomOf="@id/textViewNombrePeleador"
            app:layout_constraintEnd_toEndOf="@id/textViewNombrePeleador"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/textViewNacionalidad"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Nacionalidad"
            android:textColor="@color/gris"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@id/textViewNombrePeleador"
            app:layout_constraintTop_toBottomOf="@id/textViewApodo"
            app:layout_constraintEnd_toEndOf="@id/textViewNombrePeleador"
            android:layout_marginTop="2dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>